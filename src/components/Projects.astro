---
import { siteConfig } from "../config";

interface Props {
  embedInHero?: boolean;
  /** When true, render 4 cards in a row that control the hero carousel (click to switch hero view) */
  carouselRow?: boolean;
}

const { embedInHero = false, carouselRow = false } = Astro.props;
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
const carouselProjects = (siteConfig.projects ?? []).slice(0, 4);
---

{
  hasProjects &&
  (carouselRow ? (
    <div
      class="projects-carousel-row relative bg-white border-t border-gray-100 max-h-[28vh] min-h-[120px] flex items-center justify-center px-10 py-3 sm:py-4 md:py-5"
      aria-label="Select project to view"
    >
      <div
        id="project-cards-viewport-wrapper"
        class="project-cards-viewport-wrapper relative w-[300px] min-[680px]:w-[600px] min-[1280px]:w-[1200px] h-full min-h-[100px]"
      >
        <div
          id="project-cards-viewport"
          class="overflow-hidden h-full w-full"
        >
          <div
            id="project-cards-track"
            class="projects-cards-track flex h-full transition-transform duration-300 ease-out w-[1200px]"
            aria-live="polite"
          >
            {carouselProjects.map((project, index) => (
              <button
                type="button"
                class="project-carousel-card group relative w-[300px] flex-shrink-0 min-h-[100px] overflow-hidden rounded-lg border-2 border-gray-200 transition-all duration-300 hover:shadow-lg hover:border-gray-300 hover:-translate-y-0.5 data-[active=true]:border-[var(--accent-color)] data-[active=true]:ring-2 data-[active=true]:ring-[var(--accent-color)]/30 p-1 sm:p-1.5 box-border"
                data-carousel-index={index}
                data-active={index === 0}
                style={`--accent-color: ${siteConfig.accentColor}${project.image ? `; background-image: url(${project.image}); background-size: cover; background-position: center;` : ""}`}
                aria-pressed={index === 0}
                aria-label={`Show ${project.name}`}
              >
                {!project.image && (
                  <div class="absolute inset-0 bg-gray-100" aria-hidden="true" />
                )}
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent" aria-hidden="true" />
                <div class="absolute bottom-0 left-0 right-0 p-2 sm:p-3 flex flex-col gap-0.5 sm:gap-1">
                  <h3 class="text-xs sm:text-sm font-bold text-white line-clamp-2 leading-tight drop-shadow-sm text-left">
                    {project.name}
                  </h3>
                  {project.skills && project.skills.length > 0 && (
                    <div class="flex flex-wrap gap-0.5 sm:gap-1">
                      {project.skills.slice(0, 3).map((skill) => (
                        <span class="px-1 py-0.5 bg-white/90 text-gray-900 rounded text-[7px] sm:text-[8px] font-medium">
                          {skill}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              </button>
            ))}
          </div>
        </div>
        <div
          id="project-cards-arrows"
          class="hidden min-[680px]:flex min-[1280px]:!hidden absolute inset-y-0 left-0 right-0 items-center justify-between pointer-events-none"
          aria-hidden="true"
        >
          <button
            type="button"
            id="project-cards-prev"
            class="pointer-events-auto absolute left-0 top-1/2 -translate-y-1/2 -translate-x-[calc(100%+50px)] w-9 h-9 flex items-center justify-center rounded-full bg-white/95 shadow-md border border-gray-200 text-gray-700 hover:bg-white hover:text-[var(--accent-color)] transition-colors z-10"
            style={`--accent-color: ${siteConfig.accentColor}`}
            aria-label="Previous project"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 18l-6-6 6-6"/></svg>
          </button>
          <button
            type="button"
            id="project-cards-next"
            class="pointer-events-auto absolute right-0 top-1/2 -translate-y-1/2 translate-x-[calc(100%+50px)] w-9 h-9 flex items-center justify-center rounded-full bg-white/95 shadow-md border border-gray-200 text-gray-700 hover:bg-white hover:text-[var(--accent-color)] transition-colors z-10"
            style={`--accent-color: ${siteConfig.accentColor}`}
            aria-label="Next project"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 18l6-6-6-6"/></svg>
          </button>
        </div>
        <div
          id="project-cards-arrows-single"
          class="flex min-[680px]:hidden absolute inset-y-0 left-0 right-0 items-center justify-between pointer-events-none"
          aria-hidden="true"
        >
          <button
            type="button"
            id="project-cards-prev-single"
            class="pointer-events-auto absolute left-0 top-1/2 -translate-y-1/2 -translate-x-[calc(100%+50px)] w-9 h-9 flex items-center justify-center rounded-full bg-white/95 shadow-md border border-gray-200 text-gray-700 hover:bg-white hover:text-[var(--accent-color)] transition-colors z-10"
            style={`--accent-color: ${siteConfig.accentColor}`}
            aria-label="Previous project"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 18l-6-6 6-6"/></svg>
          </button>
          <button
            type="button"
            id="project-cards-next-single"
            class="pointer-events-auto absolute right-0 top-1/2 -translate-y-1/2 translate-x-[calc(100%+50px)] w-9 h-9 flex items-center justify-center rounded-full bg-white/95 shadow-md border border-gray-200 text-gray-700 hover:bg-white hover:text-[var(--accent-color)] transition-colors z-10"
            style={`--accent-color: ${siteConfig.accentColor}`}
            aria-label="Next project"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 18l6-6-6-6"/></svg>
          </button>
        </div>
      </div>
    </div>
  ) : embedInHero ? (
    <div class="projects-hero-row flex gap-2 w-[976px] h-[240px]">
      {siteConfig.projects.map((project, index) => {
        const Component = project.link ? "a" : "div";
        const linkProps = project.link
          ? {
              href: project.link,
              target: "_blank",
              rel: "noopener noreferrer",
            }
          : {};

        return (
          <div class="group relative w-[320px] h-[240px] flex-shrink-0">
            <Component
              {...linkProps}
              class={`block relative h-full overflow-hidden rounded-lg border border-gray-200 transition-all duration-300 ${
                project.link
                  ? "hover:shadow-xl hover:border-gray-300 hover:-translate-y-0.5"
                  : ""
              }`}
              style={project.image ? `background-image: url(${project.image}); background-size: cover; background-position: center;` : undefined}
            >
              {!project.image && (
                <div class="absolute inset-0 bg-gray-100" aria-hidden="true" />
              )}
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent" aria-hidden="true" />
              {project.link && (
                <div class="absolute top-2 right-2 z-10 w-7 h-7 flex items-center justify-center bg-gray-900 rounded-full text-white transition-all duration-300 group-hover:bg-gray-700">
                  <svg
                    class="w-3 h-3 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 17L17 7M17 7H7M17 7V17"
                    />
                  </svg>
                </div>
              )}
              <div class="absolute bottom-0 left-0 right-0 p-3 flex flex-col gap-1.5">
                <h3 class="text-xs font-bold text-white line-clamp-2 leading-tight drop-shadow-sm">
                  {project.name}
                </h3>
                {project.skills && project.skills.length > 0 && (
                  <div class="flex flex-wrap gap-1">
                    {project.skills.slice(0, 3).map((skill) => (
                      <span
                        class={`px-1.5 py-0.5 bg-white/90 text-gray-900 rounded text-[8px] font-medium transition-all duration-300 ${
                          project.link ? "group-hover:bg-white" : ""
                        }`}
                      >
                        {skill}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </Component>
          </div>
        );
      })}
    </div>
  ) : (
    <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Projects
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.projects.map((project, index) => {
                const Component = project.link ? "a" : "div";
                const linkProps = project.link
                  ? {
                      href: project.link,
                      target: "_blank",
                      rel: "noopener noreferrer",
                    }
                  : {};

                return (
                  <div class="group relative">
                    <Component
                      {...linkProps}
                      class={`block relative min-h-[280px] sm:min-h-[320px] overflow-hidden rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300 ${
                        project.link
                          ? "hover:shadow-xl hover:border-gray-300 hover:-translate-y-1"
                          : ""
                      }`}
                      style={project.image ? `background-image: url(${project.image}); background-size: cover; background-position: center;` : undefined}
                    >
                      {!project.image && (
                        <div class="absolute inset-0 bg-gray-100" aria-hidden="true" />
                      )}
                      <div class="absolute inset-0 bg-gradient-to-t from-black/75 via-black/15 to-transparent" aria-hidden="true" />
                      {project.link && (
                        <div class="absolute top-4 right-4 sm:top-6 sm:right-6 md:top-8 md:right-8 z-10 w-10 h-10 sm:w-11 sm:h-11 md:w-12 md:h-12 flex items-center justify-center bg-gray-900 rounded-full text-white transition-all duration-300 group-hover:bg-gray-700">
                          <svg
                            class="w-4 h-4 sm:w-4.5 sm:h-4.5 md:w-5 md:h-5 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M7 17L17 7M17 7H7M17 7V17"
                            />
                          </svg>
                        </div>
                      )}
                      <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-6 md:p-8 flex flex-col gap-2">
                        <h3 class="text-xl sm:text-2xl font-bold text-white drop-shadow-sm">
                          {project.name}
                        </h3>
                        {project.skills && project.skills.length > 0 && (
                          <div class="flex flex-wrap gap-1.5 sm:gap-2">
                            {project.skills.map((skill) => (
                              <span
                                class={`px-2.5 sm:px-3 py-1 sm:py-1.5 bg-white/90 text-gray-900 rounded-md sm:rounded-lg text-xs sm:text-sm font-medium transition-all duration-300 ${
                                  project.link ? "group-hover:bg-white" : ""
                                }`}
                              >
                                {skill}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </Component>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  ))
}
